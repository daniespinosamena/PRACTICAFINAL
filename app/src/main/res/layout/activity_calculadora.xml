<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dani.practicafinal.ActivityCalculadora"
    android:layout_rowSpan="4"
    android:background="@drawable/back">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="0"
        android:elevation="2dp"
        android:background="?android:attr/colorForeground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/Pantalla"
            android:layout_weight="1"
            android:background="@drawable/button_corners"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:gravity="center_vertical|end"
            android:hapticFeedbackEnabled="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:layout_height="0dp">

            <Button
                android:text="SAVE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnGuardarInt"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="guardar" />

            <Button
                android:text="RECOVER"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnRec"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="recuperar" />

            <Button
                android:text="EXIT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnSalir"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:layout_height="0dp">

            <Button
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butc"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickClean" />

            <Button
                android:text="+/-"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butmasmenos"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clicBoton" />

            <Button
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butdiv"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickOperador" />

            <Button
                android:text="X"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butx"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickOperador" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but7"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but8"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but9"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butmenos"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickOperador" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:layout_height="0dp">

            <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but4"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but5"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/but6"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickBotonNum" />

            <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/butmas"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_corners"
                android:onClick="clickOperador" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:text="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/but1"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clickBotonNum" />

                    <Button
                        android:text="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/but2"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clickBotonNum" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/but0"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clickBotonNum" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/but3"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clickBotonNum" />

                    <Button
                        android:text="."
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/butpunto"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clicBoton" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="="
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/butresul"
                        android:fontFamily="casual"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textStyle="normal|bold"
                        android:background="@drawable/button_corners"
                        android:onClick="clickIgual" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
